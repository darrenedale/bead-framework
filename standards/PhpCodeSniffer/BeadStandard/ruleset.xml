<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Bead Framework Coding Standards" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>The Bead framework coding standard.</description>

    <rule ref="PSR12">
        <exclude name="Generic.NamingConventions.UpperCaseConstantName" />
        <exclude name="Generic.Files.LineLength" />
        <exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing" />
    </rule>

    <rule ref="BeadStandard.Functions.FunctionDeclarationArgumentSpacing">
        <property name="requiredSpacesAfterReferenceOperator" value="1" />
        <property name="requiredSpacesAfterVariadicOperator" value="1" />
    </rule>

</ruleset>