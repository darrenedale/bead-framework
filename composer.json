{
  "name": "bead/framework",
  "description": "A (work-in-progress) PHP application framework",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Darren Edale",
      "email": "packagist@equit.dev"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/darrenedale/PHP_CodeSniffer"
    }
  ],
  "require": {
    "php": "^8",
    "ext-mbstring": "*",
    "ext-dom": "*",
    "ext-pdo": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "psr/container": "^2.0",
    "psr/http-message": "^1",
    "psr/log": "^3"
  },
  "suggest": {
    "ext-shmop": "*",
    "ext-openssl": "*",
    "ext-sodium": "*"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "dev-allow-spacing-around-reference-operator-in-function-declarations",
    "ext-uopz": "^6||^7"
  },
  "autoload": {
    "psr-4": {
      "Bead\\": "src"
    },
    "files": [
      "src/Helpers/I18n.php",
      "src/Helpers/Iterable.php",
      "src/Helpers/Str.php",
      "src/Polyfill/string.php",
      "src/Polyfill/array.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BeadTests\\": "test",
      "BeadStandards\\": "standards"
    }
  }
}
