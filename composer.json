{
  "name": "bead/framework",
  "description": "A (work-in-progress) PHP application framework",
  "minimum-stability": "stable",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Darren Edale",
      "email": "packagist@equit.dev"
    }
  ],
  "require": {
    "php": "^8",
    "ext-mbstring": "*",
    "ext-dom": "*",
    "ext-pdo": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "psr/container": "^2.0",
    "psr/http-message": "^1"
  },
  "suggest": {
    "ext-shmop": "*"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "ext-uopz": "^6||^7"
  },
  "autoload": {
    "psr-4": {
      "Bead\\": "src"
    },
    "files": [
      "src/includes/array.php",
      "src/includes/i18n.php",
      "src/includes/string.php",
      "src/includes/traversable.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BeadTests\\": "test"
    }
  }
}
